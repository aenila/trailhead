<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Name_Restriction</fullName>
    <active>true</active>
    <description>Restricts format of name field</description>
    <errorConditionFormula>!CONTAINS(Name, Account.Name)</errorConditionFormula>
    <errorDisplayField>AccountId</errorDisplayField>
    <errorMessage>Opportunity Name must start with account name</errorMessage>
</ValidationRule>
